{
	"manifest_version": 3,
	"short_name": "ImprovedTube",
	"name": "'Improve YouTube!' ðŸŽ§ (for YouTube & Videos)",
	"description": "__MSG_description_ext__",
	"version": "4.940",
	"default_locale": "en",
	"icons": {
		"128": "resources/icons/128.png",
		"16": "resources/icons/16.png",
		"32": "resources/icons/32.png",
		"48": "resources/icons/48.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "menu/index.html",
		"default_area": "navbar"
	},
	"options_page": "menu/index.html",
	"options_ui": {
		"page": "menu/index.html"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"css": [
				"css/styles.css",
				"css/night-mode.css",
				"css/general.css",
				"css/appearance/header.css",
				"css/appearance/player.css",
				"css/appearance/details.css",
				"css/appearance/sidebar.css",
				"css/appearance/comments.css"
			],
			"exclude_matches": [
				"https://www.youtube.com/audiolibrary/*",
				"https://www.youtube.com/tv*"
			],
			"js": [
				"js/extension/core.js",
				"js/extension/functions.js",
				"js/extension/appearance/night-mode.js",
				"js/extension/appearance/general.js",
				"js/extension/appearance/sidebar.js",
				"js/extension/appearance/comments.js",
				"js/extension/init.js"
			],
			"matches": [
				"https://www.youtube.com/*"
			],
			"run_at": "document_start"
		}
	],
	"host_permissions": [ "https://www.youtube.com/*" ],
	"optional_permissions": [
		"downloads"
	],
	"permissions": [
		"contextMenus",
		"storage"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"menu/index.html",
				"js/web-accessible/core.js",
				"js/web-accessible/functions.js",
				"js/web-accessible/appearance/appearance.js",
				"js/web-accessible/appearance/player.js",
				"js/web-accessible/appearance/themes.js",
				"js/web-accessible/appearance/playlist.js",
				"js/web-accessible/appearance/channel.js",
				"js/web-accessible/appearance/shortcuts.js",
				"js/web-accessible/appearance/blocklist.js",
				"js/web-accessible/appearance/settings.js",
				"js/web-accessible/init.js",
				"resources/icons/48.png"
			],
			"matches": [
				"https://www.youtube.com/*"
			]
		}
	]
}
