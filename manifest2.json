{
	"manifest_version": 2,
	"short_name" : "ImprovedTube",
	"name": "'Improve YouTube!' ðŸŽ§ (for YouTube & Videos)",
	"description": "__MSG_description_ext__",
	"version": "4.937",
	"default_locale": "en",
	"icons": {							
		"16": "res/icons/16.png",
		"32": "res/icons/32.png",
		"48": "res/icons/48.png",
		"128": "res/icons/128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_popup": "menu/index.html",
		"default_area": "navbar"
	},
	"options_page": "menu/index.html",
	"options_ui": {
        "page": "menu/index.html"
    },
	"content_scripts": [
		{
			"all_frames": true,
			"css": [
				"css/extension/styles.css",
				"css/extension/night-mode.css",
				"css/extension/general.css",
				"css/extension/appearance/header.css",
				"css/extension/appearance/player.css",
				"css/extension/appearance/details.css",
				"css/extension/appearance/sidebar.css",
				"css/extension/appearance/comments.css"
			],
			"exclude_matches": [
				"https://www.youtube.com/audiolibrary/*",
				"https://www.youtube.com/tv*"
			],
			"js": [		
				"js/extension/core.js",
				"js/extension/functions.js",
				"js/extension/appearance/night-mode.js",
				"js/extension/appearance/general.js",
				"js/extension/appearance/sidebar/sidebar.js",
				"js/extension/appearance/comments/comments.js",
				"js/extension/init.js"
			],
			"matches": [
				"https://www.youtube.com/*"
			],
			"run_at": "document_start"
		}
	],
	"host_permissions": [ "https://www.youtube.com/*" ],
	"offline_enabled": true,
	"optional_permissions": [
		"downloads"
	],
	"permissions": [
		"contextMenus",
		"storage",
		"battery"
	],
	"web_accessible_res": [
			"menu/index.html",
			"js/web-accessible/core.js",
			"js/web-accessible/functions.js",
			"js/web-accessible/appearance/appearance.js",
			"js/web-accessible/appearance/player.js",
			"js/web-accessible/appearance/themes.js",
			"js/web-accessible/appearance/playlist.js",
			"js/web-accessible/appearance/channel.js",
			"js/web-accessible/appearance/shortcuts.js",
			"js/web-accessible/appearance/blocklist.js",
			"js/web-accessible/appearance/settings.js",
			"js/web-accessible/init.js"
			]
}
